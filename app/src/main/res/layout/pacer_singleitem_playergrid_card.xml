<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pacers_playerGrid_card_ivImg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/player1"
            android:background="#DFDCDC"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:background="@drawable/pacer_playergrid_card_background"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pacers_playerGrid_card_tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harison Barnes"
                android:textColor="@color/indiana_pacers_yellow"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pacers_playerGrid_card_tvposition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forward"
                android:textColor="#B1B1B1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/pacers_playerGrid_card_tvno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>