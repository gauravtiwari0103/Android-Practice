<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indiana_pacers_background"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:background="@color/indiana_pacers_background"
        tools:context=".week3.indiana_pacers_ui.PlayerStats">

        <include
            android:id="@+id/pacers_playerstats_inc_playercard"
            layout="@layout/pacers_player_card"
            android:layout_width="0dp"
            android:layout_height="510dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <include
            android:id="@+id/pacers_playerstats_inc_season_average"
            layout="@layout/pacers_season_average_card"
            android:layout_width="0dp"
            android:layout_height="385dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pacers_playerstats_inc_playercard"
            android:layout_marginTop="24dp"/>

        <include
            android:id="@+id/pacers_playerstats_inc_season_average"
            layout="@layout/pacers_season_average_card"
            android:layout_width="0dp"
            android:layout_height="385dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pacers_playerstats_inc_playercard"
            android:layout_marginTop="24dp"/>

        <include
            android:id="@+id/pacers_playerstats_inc_advanced_stats"
            layout="@layout/pacers_advanced_stats_card"
            android:layout_width="0dp"
            android:layout_height="385dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pacers_playerstats_inc_season_average"
            android:layout_marginTop="32dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/pacers_playerstats_cardView_backbtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="22dp"
            app:layout_constraintStart_toStartOf="@+id/pacers_playerstats_inc_playercard"
            app:layout_constraintTop_toTopOf="@+id/pacers_playerstats_inc_playercard">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/arrowback_24"
                android:layout_marginStart="10dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
