<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".week2.superheroapp.SuperHeroDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/superAppbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/superDetailsCollaspingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="#AE2F08"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="superhero3">

            <ImageView
                android:id="@+id/superDetailImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/superhero"
                app:layout_collapseMode="parallax" />
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/movieDetailsWeightPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="@+id/superDetailsHeightPlaceholder"
                app:layout_constraintTop_toBottomOf="@+id/superDetailsHeightPlaceholder" />

            <TextView
                android:id="@+id/superDetailsHeightPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="@+id/superdetailsGenderPlaceholder"
                app:layout_constraintTop_toBottomOf="@+id/superdetailsGenderPlaceholder" />

            <TextView
                android:id="@+id/superdetailsGenderPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="@+id/superdetailnameplace"
                app:layout_constraintTop_toBottomOf="@+id/superdetailnameplace" />

            <TextView
                android:id="@+id/superdetailGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/detailspagetitle"
                android:text="General"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsTitleText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/superdetailnameplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Name: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/superdetailGeneral" />

            <TextView
                android:id="@+id/superdetailsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Batman"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/superdetailnameplace"
                app:layout_constraintTop_toBottomOf="@+id/superdetailGeneral" />

            <TextView
                android:id="@+id/superdetailsGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/superdetailsname"
                app:layout_constraintTop_toTopOf="@+id/superdetailsGenderPlaceholder" />

            <TextView
                android:id="@+id/superDetailsHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.1"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/superdetailsGender"
                app:layout_constraintTop_toBottomOf="@+id/superdetailsGender" />

            <TextView
                android:id="@+id/superDetailsWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75kg"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/superDetailsHeight"
                app:layout_constraintTop_toBottomOf="@+id/superDetailsHeight" />

            <TextView
                android:id="@+id/superDetailsPowers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/detailspagetitle"
                android:text="Powers"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsTitleText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieDetailsWeightPlaceholder" />

            <TextView
                android:id="@+id/superDetailsIntelligencePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Intelligence: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/superDetailsPowers" />

            <TextView
                android:id="@+id/superDetailsIntelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/superDetailsWeight"
                app:layout_constraintTop_toTopOf="@+id/superDetailsIntelligencePlaceholder" />

            <TextView
                android:id="@+id/superDetailsStrenghtPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strength: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="@+id/superDetailsIntelligencePlaceholder"
                app:layout_constraintTop_toBottomOf="@+id/superDetailsIntelligencePlaceholder" />

            <TextView
                android:id="@+id/movieDetailsStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/superDetailsIntelligence"
                app:layout_constraintTop_toBottomOf="@+id/superDetailsIntelligence" />

            <TextView
                android:id="@+id/movieDetailsSpeedPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed: "
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintStart_toStartOf="@+id/superDetailsStrenghtPlaceholder"
                app:layout_constraintTop_toBottomOf="@+id/superDetailsStrenghtPlaceholder" />

            <TextView
                android:id="@+id/superDetailsSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="84"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/movieDetailsStrength"
                app:layout_constraintTop_toBottomOf="@+id/movieDetailsStrength" />

            <TextView
                android:id="@+id/movieDetailsClips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/detailspagetitle"
                android:text="Clips"
                android:textColor="@color/white"
                android:textSize="@dimen/moviedetialsTitleText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieDetailsSpeedPlaceholder" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/superDetailsRv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieDetailsClips" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
