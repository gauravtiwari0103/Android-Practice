<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indiana_pacers_background_dark"
    android:orientation="vertical">
    <include
        layout="@layout/pacers_appbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/indiana_pacers_background"
            tools:context=".week3.indiana_pacers_ui.HorizontalList">



            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="24dp"
                android:id="@+id/pacer_horizontal_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"/>

            <include
                layout="@layout/pacers_player_card"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
            <include
                layout="@layout/pacers_season_average_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
            <include
                layout="@layout/pacers_advanced_stats_card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</LinearLayout>

