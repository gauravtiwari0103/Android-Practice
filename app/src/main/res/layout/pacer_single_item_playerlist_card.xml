<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/indiana_pacers_background_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/pacer_iv_ListCardPlayerImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/pacer_list_player_background"
            android:elevation="-1dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/player1" />

        <TextView
            android:id="@+id/pacer_listcard_tv_jerseyno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="88"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pacer_listCard_tv_playerName"
            app:layout_constraintStart_toEndOf="@+id/pacer_iv_ListCardPlayerImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/pacer_listCard_tv_playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Goga Bitadze"
            android:textColor="@color/indiana_pacers_yellow"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pacer_listCard_tv_playerposition"
            app:layout_constraintStart_toStartOf="@+id/pacer_listcard_tv_jerseyno"
            app:layout_constraintTop_toBottomOf="@+id/pacer_listcard_tv_jerseyno" />

        <TextView
            android:id="@+id/pacer_listCard_tv_playerposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Center-Forward"
            android:textColor="#B1B1B1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/pacer_listCard_tv_playerName"
            app:layout_constraintTop_toBottomOf="@+id/pacer_listCard_tv_playerName" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pacers_forwardd" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>