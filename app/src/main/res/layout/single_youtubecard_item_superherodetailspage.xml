<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/black"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/superDetailsYoutubeCardImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/superhero"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/superDetailsYoutubeCardTextView"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailspagetitle"
            android:text="Batman vs SuperMan Dawn kdsalfjlsajdof justice"
            android:textSize="@dimen/moviedetialsText"
            android:textColor="@color/white"
            android:ems="10"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>